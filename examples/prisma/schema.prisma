generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator zod {
  provider = "../bin/cli.js"
  output   = "./zod"
}

enum UserType {
  ADMIN
  USER
}

model User {
  id    Int      @id @default(autoincrement())
  email String   @unique
  name  String?
  type  UserType
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}
