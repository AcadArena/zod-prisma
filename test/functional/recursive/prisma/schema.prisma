datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator zod {
  provider = "../../../bin/cli.js"
  output   = "../actual/"
  relationModel = true
}

model Comment {
  id String @id @default(uuid())
  author String
  contents String
  parentId String
  parent Comment @relation("lineage", fields: [parentId], references: [id])
  children Comment[] @relation("lineage")
}
